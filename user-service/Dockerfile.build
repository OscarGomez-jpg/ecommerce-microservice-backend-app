# Build stage
FROM maven:3.8-openjdk-11 AS build
WORKDIR /build
# Copy parent pom
COPY ../pom.xml ../pom.xml
# Copy service files
COPY pom.xml .
COPY src ./src
RUN mvn clean package -DskipTests

# Runtime stage
FROM openjdk:11-jre-slim
WORKDIR /app
COPY --from=build /build/target/*.jar app.jar
EXPOSE 8700
ENTRYPOINT ["java", "-jar", "app.jar"]
